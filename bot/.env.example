WEBAPP_URL=https://your-domain.com

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# AI Configuration (DeepSeek API for natural language product management)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

{
  "name": "telegram-shop-bot",
  "version": "1.0.0",
  "description": "Status Stock E-commerce Telegram Bot",
  "type": "module",
  "main": "src/bot.js",
  "scripts": {
    "start": "node src/bot.js",
    "dev": "nodemon src/bot.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest tests/integration",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' npx jest tests/e2e",
    "test:lint:bot": "node tools/lint-callbacks-ack.js && node tools/lint-webapp-links.js",
    "test:ci": "npm run test:lint:bot && npm test",
    "test:bulk": "node tests/manual/test-bulk-operations.js",
    "lint": "eslint src/ tests/ --fix",
    "lint:check": "eslint src/ tests/",
    "test:all": "npm run lint:check && npm test"
  },
  "keywords": [
    "telegram",
    "bot",
    "e-commerce",
    "crypto"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "axios-retry": "^4.5.0",
    "dotenv": "^16.3.1",
    "ioredis": "^5.8.2",
    "openai": "^6.6.0",
    "telegraf": "^4.15.0",
    "wallet-validator": "^0.3.18",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@jest/globals": "^29.7.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.38.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

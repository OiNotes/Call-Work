# Development environment (ngrok)

# Server
PORT=3000
NODE_ENV=development
HTTPS_ENABLED=false

# Database (local)
DATABASE_URL=postgresql://admin:password@localhost:5432/telegram_shop

# JWT
JWT_SECRET=dev-secret-change-in-production
JWT_EXPIRES_IN=7d

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456:ABCdef-YOUR-BOT-TOKEN
TELEGRAM_WEBHOOK_URL=  # Empty for polling mode

# URLs (will be auto-updated by ngrok-setup.sh)
FRONTEND_URL=https://xyz789.ngrok-free.app
BACKEND_URL=https://abc123.ngrok-free.app

# Crypto APIs (testnet for dev)
BLOCKCYPHER_API_KEY=your-key
ETHERSCAN_API_KEY=your-key
TRONGRID_API_KEY=your-key

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

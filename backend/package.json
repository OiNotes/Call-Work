{
  "name": "telegram-shop-backend",
  "version": "1.0.0",
  "description": "Backend API for Telegram E-Commerce Platform",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "worker": "node src/workers/syncWorker.js",
    "worker:dev": "nodemon src/workers/syncWorker.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/ __tests__/ --fix",
    "lint:check": "eslint src/ __tests__/",
    "test:all": "npm run lint:check && npm test",
    "test:ci": "NODE_ENV=test node database/migrations.cjs --apply && npm test",
    "db:seed": "psql postgresql://sile@localhost:5432/telegram_shop -f database/seed.sql"
  },
  "keywords": [
    "telegram",
    "ecommerce",
    "crypto",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "bip32": "^4.0.0",
    "bitcoinjs-lib": "^6.1.5",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.37.2",
    "pg": "^8.11.0",
    "qrcode": "^1.5.4",
    "tiny-secp256k1": "^2.2.3",
    "tronweb": "^5.3.2",
    "wallet-validator": "^0.3.18",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}

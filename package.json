{
  "name": "telegram-shop-platform",
  "version": "1.0.0",
  "description": "Telegram e-commerce platform with Mini App",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:webapp\" --names \"BACKEND,WEBAPP\" --prefix-colors \"blue,magenta\" --kill-others-on-fail",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:webapp\" \"npm run dev:bot\" --names \"BACKEND,WEBAPP,BOT\" --prefix-colors \"blue,magenta,green\" --kill-others-on-fail",
    "dev:backend": "cd backend && npm run dev",
    "dev:webapp": "cd webapp && npm run dev",
    "dev:bot": "cd bot && npm start",
    "dev:ngrok": "bash dev-scripts/ngrok-setup.sh",
    "ngrok:update-env": "node dev-scripts/update-env.js",
    "ngrok:status": "curl -s http://localhost:4040/api/tunnels | jq '.tunnels[] | {name, public_url, config}'",
    "ngrok:verify": "bash dev-scripts/verify-setup.sh",
    "setup:botfather": "bash dev-scripts/setup-botfather.sh",
    "start": "npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../webapp && npm install && cd ../bot && npm install && cd ..",
    "clean": "rm -rf node_modules backend/node_modules webapp/node_modules bot/node_modules",
    "build:webapp": "cd webapp && npm run build",
    "db:migrate": "cd backend && node database/migrations.js",
    "db:setup": "createdb telegram_shop && npm run db:migrate",
    "backend": "cd backend && npm start",
    "webapp": "cd webapp && npm run dev",
    "bot": "cd bot && npm start",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "keywords": [
    "telegram",
    "e-commerce",
    "mini-app",
    "crypto",
    "bitcoin",
    "ethereum"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
